[module/eth]
type = internal/network
interface = enp57s0u1u1
interval = 3.0

format-connected-underline = ${colors.blue}
;format-connected-underline = ${colors.green}
format-connected-prefix = "ÔúÄ "
format-connected-prefix-foreground = ${colors.white}
label-connected = %local_ip%

;format-disconnected =
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = ÔúÅ %ifname%
label-disconnected-foreground = ${colors.white}

[module/date]
type = internal/date
interval = 60

# American format
;date = "%Y %b %d (%a)"

# European format
date = "%a %d/%m"

time = "%I:%M%p"

# If you're not living in a country where AM and PM is used you can add -alt to the time above this line and comment it using ;, then you can remove the -alt to the time under this line and uncomment it.
;time-alt = " at %H:%M"
;time-alt = %H:%M:%S
;time-alt = %H:%M:%S

format-prefix = "ÔÅ≥  "
format-prefix-foreground = ${colors.white}
format-underline = ${colors.blue}

label = %date% %time%

[module/clock]
type = custom/script

format = <label>
