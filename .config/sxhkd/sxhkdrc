# Basic binds
super + Return
  $TERMINAL
super + d
  rofi -combi-modi window,drun -show combi -modi combi
super + r
  $TERMINAL -e $FILE
super + n
  $TERMINAL -e newsboat
super + i
  $TERMINAL -e htop

# More
super + shift + Tab
  menuunicode
super + shift + x
  prompt "Do you want to shutdown the computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
  prompt "Do you want to reboot the computer?" "sudo -A shutdown -r now"
