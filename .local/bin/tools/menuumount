#!/bin/sh

# A dmenu prompt to unmount drives.
# Provides you with mounted partitions, select one to unmount.
# Drives mounted at /, /boot and /home will not be options to unmount.

unmountusb() {
  [ -z "$drives" ] && exit
  chosen="$(echo "$drives" | rofi -dmenu -location 1 -lines 2 -i -p "Unmount which drive?")" || exit 1
  chosen="$(echo "$chosen" | awk '{print $1}')"
  [ -z "$chosen" ] && exit
  sync && udisksctl unmount -b "$chosen" 2>/dev/null && notify-send "ðŸ’» USB unmounting" "$chosen unmounted."
  disk=$(lsblk -nrpo "name,type,size,mountpoint" | awk -v chosen="$chosen" '$1!=chosen && index(chosen, $1) > 0 { found=$1 } { if (length(found) > 0 && index($1, found) > 0 && $4!="") { ready="NOT" } } END { if (length(ready) == 0) printf found }')
  echo "$disk"
  if [ ! -z "$disk" ]
  then
    sync && udisksctl power-off -b "$disk" 2>/dev/null && notify-send "ðŸ’» USB" "$disk power off."
  fi
  }

unmountandroid() { \
  chosen="$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -i -p "Unmount which device?")" || exit 1
  [ -z "$chosen" ] && exit
  sudo -A umount -l "$chosen" && notify-send "ðŸ¤– Android unmounting" "$chosen unmounted."
  }

asktype() { \
  choice="$(printf "USB\\nAndroid" | dmenu -i -p "Unmount a USB drive or Android device?")" || exit 1
  case "$choice" in
    USB) unmountusb ;;
    Android) unmountandroid ;;
  esac
  }

drives=$(lsblk -nrpo "name,type,size,mountpoint" | awk '$4!~/\/boot|\/home$|SWAP/&&length($4)>1{printf "%s (%s - %s)\n",$1,$4,$3}')

if ! grep simple-mtpfs /etc/mtab; then
  [ -z "$drives" ] && echo "No drives to unmount." &&  exit
  echo "Unmountable USB drive detected."
  echo "$drives"
  unmountusb
else
  if [ -z "$drives" ]
  then
    echo "Unmountable Android device detected."
#    unmountandroid
  else
    echo "Unmountable USB drive(s) and Android device(s) detected."
#    asktype
  fi
fi
